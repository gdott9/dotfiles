[color]
	ui = auto
	interactive = auto
[alias]
	st = status -sb
	ci = commit
	co = checkout
	pr = pull --rebase
	dc = diff --cached
	r = remote
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ll = log --stat --abbrev-commit
	amend = commit --amend -C HEAD
[diff]
	tool = vimdiff
[merge]
	tool = meld
[mergetool]
	keepBackup = false
[credential]
	helper = cache
